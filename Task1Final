-- Role: "Giuseppe"
-- DROP ROLE "Giuseppe";

CREATE ROLE "Giuseppe" WITH
  LOGIN
  NOSUPERUSER
  INHERIT
  NOCREATEDB
  NOCREATEROLE
  NOREPLICATION;


CREATE DATABASE "cars"
    WITH 
    OWNER = "Giuseppe"
    ENCODING = 'UTF8'
    CONNECTION LIMIT = -1;

CREATE DATABASE "Task1"
    WITH 
    OWNER = "Giuseppe"
    ENCODING = 'UTF8'
    LC_COLLATE = 'C'
    LC_CTYPE = 'C'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;